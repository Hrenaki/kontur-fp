<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Autofac" Version="6.5.0" />
    <PackageReference Include="FluentResults" Version="3.15.1" />
    <PackageReference Include="OpenNLP.NET" Version="1.9.4.1" />
    <PackageReference Include="System.Drawing.Common" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="EParser">
      <HintPath>EParser.dll</HintPath>
    </Reference>
    <Reference Include="NumMath">
      <HintPath>NumMath.dll</HintPath>
    </Reference>
    <Reference Include="OptimizationMethods">
      <HintPath>OptimizationMethods.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Update="OpenNLPBins\en-pos-maxent.bin">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="OpenNLPBins\en-token.bin">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
